<h1>Студент</h1>
<%= show_for @student do | student | %>
  <%= student.attribute :study_id %>
  <%= student.attribute :name %>
  <%= student.attribute :born_on %>
  <%= student.association :faculty %>
  <%= student.association :subfaculty %>
  <%= student.attributes :year, :group %>
  <%= student.attribute :learns, :value => :text %>
  <%= student.attribute :in_gpo, :value => :text %>
<% end %>
<p><%= link_to 'Вернуться', :back, :class => "button" %></p>

